<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF4E5"
    android:visibility="visible">

    <!--red shape-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="-2dp"
        android:src="@drawable/intro_ellipse_5red_round_" />

    <!--yellow shape-->
    <ImageView
        android:layout_width="231dp"
        android:layout_height="352dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-44dp"
        android:layout_marginTop="58dp"
        android:src="@drawable/intro_ellipse_6yellow_round" />

    <!--green shape-->
    <ImageView
        android:layout_width="421dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-25dp"
        android:adjustViewBounds="true"
        android:src="@drawable/intro_ellipse_2bot_green_round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="330dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="570dp"
            android:backgroundTint="#316B79"
            android:fontFamily="@font/stoke"
            android:freezesText="false"
            android:includeFontPadding="false"
            android:shadowColor="#6E6666"
            android:text="Get Started!"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFF4E5"
            android:textColorHighlight="#FFF4E5"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="365dp"
            android:fontFamily="@font/stoke"
            android:text="Cosmetics that"
            android:textColor="#316B79"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/noto_sans"
            android:text="Everyone loves!"
            android:textColor="#316B79"
            android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="500dp"
        android:layout_height="806dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="-150dp"
        android:layout_marginRight="-20dp"
        android:src="@drawable/logo" />


</RelativeLayout>