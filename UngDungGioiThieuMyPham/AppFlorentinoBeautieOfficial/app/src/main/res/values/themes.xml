<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppFlorentinoBeautieOfficial" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/greendark_bot_nav</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.PopupOverlay" parent="Theme.MaterialComponents.DayNight" />

    <style name="NavigationView" parent="Theme.AppFlorentinoBeautieOfficial">
        <item name="android:listDivider">@color/coral_pink</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#FAD23C</item>
    </style>

    <style name="expandedBarTextStyle" parent="Theme.AppFlorentinoBeautieOfficial">
        <!--Customize your theme here -->
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>

    </style>
</resources>